<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="BookDetail" parent="AdwBreakpointBin">
    <property name="width-request">350</property>
    <property name="height-request">52</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 550px</condition>
        <setter object="top_box" property="orientation">vertical</setter>
        <setter object="top_box" property="spacing">6</setter>
        <setter object="top_box" property="halign">center</setter>
        <setter object="book_label" property="halign">center</setter>
        <setter object="author_label" property="halign">center</setter>
        <setter object="play_button" property="halign">center</setter>
      </object>
    </child>
    <property name="child">
      <object class="GtkScrolledWindow">
        <property name="focusable">true</property>
        <property name="vexpand">true</property>
        <property name="hscrollbar-policy">never</property>
        <property name="propagate-natural-width">true</property>
        <property name="propagate-natural-height">true</property>
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">800</property>
                <child>
                  <object class="GtkBox" id="top_box">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">30</property>
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">18</property>
                    <property name="halign">start</property>
                    <child>
                      <object class="GtkBox" id="album_art_container">
                        <property name="halign">center</property>
                        <property name="width-request">200</property>
                        <property name="height-request">200</property>
                        <child>
                          <object class="GtkPicture" id="album_art">
                            <style>
                              <class name="book_detail_art"/>
                            </style>
                          </object>
                        </child>
                        <style>
                          <class name="card"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="spacing">6</property>
                        <property name="vexpand">false</property>
                        <child>
                          <object class="GtkLabel" id="book_label">
                            <property name="halign">start</property>
                            <property name="label">Book name</property>
                            <property name="ellipsize">end</property>
                            <property name="max-width-chars">35</property>
                            <property name="lines">1</property>
                            <style>
                              <class name="title-1"/>
                              <class name="bold"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="author_label">
                            <property name="halign">start</property>
                            <property name="label">Book author</property>
                            <property name="ellipsize">end</property>
                            <property name="max-width-chars">50</property>
                            <property name="lines">1</property>
                            <style>
                              <class name="title-3"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="play_button">
                            <property name="focusable">true</property>
                            <property name="receives-default">true</property>
                            <property name="margin-top">18</property>
                            <property name="halign">start</property>
                            <property name="valign">end</property>
                            <property name="vexpand">true</property>
                            <child>
                              <object class="AdwButtonContent" id="play_icon">
                                <property name="label" translatable="true">Start</property>
                                <property name="icon-name">media-playback-start-symbolic</property>
                              </object>
                            </child>
                            <style>
                              <class name="suggested-action"/>
                              <class name="pill"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <property name="margin-bottom">12</property>
                        <property name="spacing">5</property>
                        <child>
                          <object class="GtkBox" id="download_box">
                            <property name="halign">end</property>
                            <property name="valign">center</property>
                            <child>
                              <object class="GtkImage" id="download_image">
                                <property name="icon-name">download-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="download_label">
                                <property name="margin-start">5</property>
                                <property name="margin-end">4</property>
                                <property name="label" translatable="true">Download</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSwitch" id="download_switch">
                            <property name="focusable">true</property>
                            <property name="halign">start</property>
                            <property name="valign">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkProgressBar" id="book_progress_bar">
                        <property name="width-request">250</property>
                        <property name="halign">center</property>
                        <property name="valign">start</property>
                        <property name="show-text">true</property>
                        <property name="margin-bottom">18</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkGrid">
                        <property name="margin-bottom">18</property>
                        <property name="hexpand">true</property>
                        <property name="row-spacing">4</property>
                        <property name="column-spacing">20</property>
                        <child>
                          <object class="GtkLabel" id="remaining_text">
                            <property name="halign">start</property>
                            <property name="hexpand">true</property>
                            <property name="label" translatable="true">Remaining</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <layout>
                              <property name="column">0</property>
                              <property name="row">3</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="remaining_label">
                            <property name="hexpand">true</property>
                            <property name="label">label</property>
                            <property name="xalign">0</property>
                            <layout>
                              <property name="column">1</property>
                              <property name="row">3</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="total_label">
                            <property name="hexpand">true</property>
                            <property name="label">label</property>
                            <property name="xalign">0</property>
                            <layout>
                              <property name="column">1</property>
                              <property name="row">2</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="last_played_label">
                            <property name="hexpand">true</property>
                            <property name="label">label</property>
                            <property name="xalign">0</property>
                            <layout>
                              <property name="column">1</property>
                              <property name="row">1</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="halign">start</property>
                            <property name="label" translatable="true">Total</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <layout>
                              <property name="column">0</property>
                              <property name="row">2</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="halign">start</property>
                            <property name="label" translatable="true">Last played</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <layout>
                              <property name="column">0</property>
                              <property name="row">1</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="published_text">
                            <property name="halign">start</property>
                            <property name="label" translatable="true">Published</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <layout>
                              <property name="column">0</property>
                              <property name="row">0</property>
                            </layout>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="published_label">
                            <property name="hexpand">true</property>
                            <property name="label">label</property>
                            <property name="xalign">0</property>
                            <layout>
                              <property name="column">1</property>
                              <property name="row">0</property>
                            </layout>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="unavailable_badge">
                        <property name="tooltip-text" translatable="true">Some or all files of this book cannot be found.</property>
                        <property name="halign">center</property>
                        <property name="spacing">4</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">info-symbolic</property>
                            <style>
                              <class name="unavailable_image"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="true">unavailable</property>
                            <style>
                              <class name="unavailable_label"/>
                            </style>
                          </object>
                        </child>
                        <style>
                          <class name="unavailable_box"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">800</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkStack" id="chapters_stack">
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">24</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">chapters_wrapper</property>
                        <property name="child">
                          <object class="GtkBox" id="chapter_list_container">
                            <property name="orientation">vertical</property>
                            <property name="spacing">18</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">chapters_loader</property>
                        <property name="child">
                          <object class="GtkSpinner" id="spinner">
                            <property name="halign">center</property>
                            <property name="spinning">true</property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>


